# Production Environment Variables
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://benefits-chatbot.example.com

# Azure Configuration (placeholders)
AZURE_COSMOS_ENDPOINT=https://<your-cosmos-account>.documents.azure.com:443/
AZURE_COSMOS_KEY=<your-cosmos-key>
AZURE_STORAGE_ACCOUNT=<your-storage-account>
AZURE_STORAGE_KEY=<your-storage-key>
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=<your-storage-account>;AccountKey=<your-storage-key>;EndpointSuffix=core.windows.net
AZURE_KEYVAULT_URL=
APPLICATIONINSIGHTS_CONNECTION_STRING=

# OpenAI Configuration (Azure OpenAI or standard OpenAI via adapters)
AZURE_OPENAI_ENDPOINT=https://<your-azure-openai-endpoint>
AZURE_OPENAI_API_KEY=<your-azure-openai-key>
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Authentication
NEXTAUTH_SECRET=<generate-32+chars-secret>
NEXTAUTH_URL=https://benefits-chatbot.example.com

# Redis (required by production config)
REDIS_URL=redis://<host>:<port>
REDIS_PASSWORD=

# CORS
CORS_ORIGIN=https://benefits-chatbot.example.com

# Firebase (optional if used)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=
FIREBASE_API_KEY=

# Security (app-specific, not validated by production.ts but often needed)
JWT_SECRET=<your-jwt-secret>
ENCRYPTION_KEY=<your-encryption-key>
NEXT_PUBLIC_ADMIN_API_TOKEN=demo-admin-token
DEMO_ADMIN_TOKEN=demo-admin-token

# Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Rate Limiting (production config accepts RATE_LIMIT_MAX and RATE_LIMIT_WINDOW)
RATE_LIMIT_MAX=60
# 15 minutes in ms (900000). Override as needed.
RATE_LIMIT_WINDOW=900000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_LLM_ROUTING=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
